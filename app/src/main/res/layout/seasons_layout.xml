<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/seasons_shape"
    android:layout_marginHorizontal="22dp"
    android:layout_marginVertical="12dp"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/logos"
        android:layout_width="0dp"
        android:textSize="21dp"
        android:text="sdssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Real madrid"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/logos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/clubnae"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="P"
        android:layout_marginTop="15sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/clubnae"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16sp"/>

    <TextView
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="D"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/p"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16sp"/>


    <TextView
        android:id="@+id/l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/d"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>